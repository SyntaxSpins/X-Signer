<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/_coordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:transitionGroup="true">
    <androidx.core.widget.NestedScrollView
        android:id="@+id/Scroller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <LinearLayout
            android:id="@+id/BG"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="18dp"
            android:paddingVertical="8dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/TopTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="8dp"
                android:paddingTop="?actionBarSize"
                android:gravity="center_vertical"
                android:text="Keystore credentials"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="@font/product_sans_regular"
                android:textColor="?colorPrimary" />
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/AliasTIP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:paddingVertical="5dp"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                app:placeholderTextColor="?colorOutline"
                app:hintEnabled="true"
                app:hintAnimationEnabled="true"
                app:placeholderText="E.g : Company name"
                android:hint="Key alias">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/AliasE"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingTop="18dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="18dp"
                    android:textSize="16sp"
                    android:imeOptions="actionNext"
                    android:focusable="true"
                    android:singleLine="true" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/AliasPassTIP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                app:hintEnabled="true"
                app:hintAnimationEnabled="true"
                android:hint="@string/stringKeyPass">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/AliasPassE"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="18dp"
                    android:textSize="16sp"
                    android:focusable="true"
                    android:textColor="@color/md_theme_textMain"
                    android:imeOptions="actionNext"
                    android:singleLine="true" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/KeyStorePassTIP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                app:hintEnabled="true"
                app:hintAnimationEnabled="true"
                android:hint="@string/stringKeyStore">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/KeyStorePassE"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingTop="18dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="18dp"
                    android:textSize="16sp"
                    android:focusable="true"
                    android:imeOptions="actionNext"
                    android:singleLine="true" />
            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:id="@+id/MiddleTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:padding="8dp"
                android:gravity="center_vertical"
                android:text="Keystore details"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="@font/product_sans_regular"
                android:textColor="?colorPrimary" />
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/KeyTypeTIP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                app:hintEnabled="true"
                app:hintAnimationEnabled="true"
                android:hint="@string/stringKeyType">
                <AutoCompleteTextView
                    android:id="@+id/KeyTypeE"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingTop="18dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="18dp"
                    android:textSize="16sp"
                    app:simpleItems="@array/keyTypes"
                    style="@style/Widget.Material3.AutoCompleteTextView.OutlinedBox"
                    android:inputType="none"
                    android:textColor="@color/md_theme_textMain"
                    android:imeOptions="actionNext"
                    android:singleLine="true" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/KeySizeTIP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                app:hintEnabled="true"
                app:hintAnimationEnabled="true"
                android:hint="@string/stringKeySize">
                <AutoCompleteTextView
                    android:id="@+id/KeySizeE"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingTop="18dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="18dp"
                    android:textSize="16sp"
                    app:simpleItems="@array/keySizes"
                    style="@style/Widget.Material3.AutoCompleteTextView.OutlinedBox"
                    android:inputType="none"
                    android:textColor="@color/md_theme_textMain"
                    android:imeOptions="actionNext"
                    android:singleLine="true" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/KeyValidityTIP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                app:hintEnabled="true"
                app:hintAnimationEnabled="true"
                android:hint="@string/stringKeyValidity">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/KeyValidityE"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingTop="18dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="18dp"
                    android:textSize="16sp"
                    android:inputType="numberSigned"
                    android:focusable="true"
                    android:textColor="@color/md_theme_textMain"
                    android:imeOptions="actionNext"
                    android:singleLine="true" />
            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:id="@+id/TypeTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="8dp"
                android:gravity="center_vertical"
                android:text="Certificate details"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="@font/product_sans_regular"
                android:textColor="?colorPrimary" />
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/NameTIP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                app:hintEnabled="true"
                app:hintAnimationEnabled="true"
                android:hint="@string/stringNameDetails">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/NameE"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingTop="18dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="18dp"
                    android:textSize="16sp"
                    android:focusable="true"
                    android:textColor="@color/md_theme_textMain"
                    android:imeOptions="actionNext"
                    android:singleLine="true" />
            </com.google.android.material.textfield.TextInputLayout>
            <LinearLayout
                android:id="@+id/OrganizationContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/OrUnitTIP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_weight="1"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    app:hintEnabled="true"
                    app:hintAnimationEnabled="true"
                    android:hint="@string/stringOrganizationalUnit">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/OrUnitE"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="20dp"
                        android:paddingTop="18dp"
                        android:paddingRight="20dp"
                        android:paddingBottom="18dp"
                        android:textSize="16sp"
                        android:focusable="true"
                        android:textColor="@color/md_theme_textMain"
                        android:imeOptions="actionNext"
                        android:singleLine="true" />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/OrNameTIP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_weight="1"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    app:hintEnabled="true"
                    app:hintAnimationEnabled="true"
                    android:hint="@string/stringOrganizationName">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/OrNameE"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="20dp"
                        android:paddingTop="18dp"
                        android:paddingRight="20dp"
                        android:paddingBottom="18dp"
                        android:textSize="16sp"
                        android:focusable="true"
                        android:textColor="@color/md_theme_textMain"
                        android:imeOptions="actionNext"
                        android:singleLine="true" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/LocationContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/CityTIP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_weight="1"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    app:hintEnabled="true"
                    app:hintAnimationEnabled="true"
                    android:hint="@string/stringCity">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/CityE"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="20dp"
                        android:paddingTop="18dp"
                        android:paddingRight="20dp"
                        android:paddingBottom="18dp"
                        android:textSize="16sp"
                        android:focusable="true"
                        android:textColor="@color/md_theme_textMain"
                        android:imeOptions="actionNext"
                        android:singleLine="true" />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/StateTIP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_weight="1"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    app:hintEnabled="true"
                    app:hintAnimationEnabled="true"
                    android:hint="@string/stringState">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/StateE"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="20dp"
                        android:paddingTop="18dp"
                        android:paddingRight="20dp"
                        android:paddingBottom="18dp"
                        android:textSize="16sp"
                        android:focusable="true"
                        android:textColor="@color/md_theme_textMain"
                        android:imeOptions="actionNext"
                        android:singleLine="true" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/CountryTIP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                app:hintEnabled="true"
                app:hintAnimationEnabled="true"
                android:hint="@string/stringCountry">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/CountryE"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingTop="18dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="18dp"
                    android:textSize="16sp"
                    android:focusable="true"
                    android:textColor="@color/md_theme_textMain"
                    android:imeOptions="actionDone"
                    android:singleLine="true" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/CreateButton"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:padding="8dp"
        android:layout_gravity="bottom|center_horizontal"
        android:gravity="center_horizontal|center_vertical"
        android:text="Create"
        android:textSize="16sp"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
        app:cornerRadius="100dp"
        style="@style/Widget.Material3.Button"
        app:textAllCaps="false"
        android:letterSpacing="0.0" />
    <com.github.mmin18.widget.RealtimeBlurView
        android:id="@+id/blurView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:realtimeBlurRadius="20dp"
        app:realtimeOverlayColor="@drawable/surface_with_alpha"
        app:layout_collapseMode="pin">
        </com.github.mmin18.widget.RealtimeBlurView>
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent" />
    <LinearLayout
        android:id="@+id/divider"
        android:layout_height="3dp"
        android:layout_width="match_parent"
        android:background="?colorSurfaceContainer"
        app:layout_collapseMode="pin" />
    <com.github.mmin18.widget.RealtimeBlurView
        android:id="@+id/blurLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        app:realtimeBlurRadius="20dp"
        app:realtimeOverlayColor="#11BDBDBD">
    </com.github.mmin18.widget.RealtimeBlurView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
