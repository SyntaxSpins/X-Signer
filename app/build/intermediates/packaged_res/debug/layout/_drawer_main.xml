<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<LinearLayout
		android:id="@+id/DrawerContainer"
		android:layout_width="295dp"
		android:layout_height="match_parent"
		android:paddingTop="8dp"
		android:paddingBottom="8dp"
		android:orientation="vertical">
		<ImageView
			android:id="@+id/UserIcon"
			android:layout_width="70dp"
			android:layout_height="70dp"
			android:layout_marginLeft="10dp"
			android:layout_marginTop="8dp"
			android:src="@drawable/default_image"
			android:scaleType="fitCenter" />
		<TextView
			android:id="@+id/Username"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="8dp"
			android:paddingLeft="8dp"
			android:paddingTop="8dp"
			android:paddingRight="8dp"
			android:text="Guest"
			android:textSize="20sp"
			android:fontFamily="@font/product_sans_regular"
			android:textColor="@color/colorTextMain" />
		<TextView
			android:id="@+id/EmailAdress"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="8dp"
			android:paddingLeft="8dp"
			android:paddingRight="8dp"
			android:paddingBottom="8dp"
			android:text="Not signed in"
			android:textSize="14sp"
			android:fontFamily="@font/product_sans_regular"
			android:textColor="@color/colorTextSecondary" />
		<LinearLayout
			android:id="@+id/Divider"
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:layout_marginLeft="3dp"
			android:layout_marginTop="8dp"
			android:layout_marginRight="3dp"
			android:layout_marginBottom="8dp"
			android:padding="8dp"
			android:orientation="horizontal"
			android:scaleY="0.25"
			android:background="@color/colorTextSecondary" />
		<LinearLayout
			android:id="@+id/HomeLinear"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingLeft="8dp"
			android:paddingTop="6dp"
			android:paddingRight="8dp"
			android:paddingBottom="6dp"
			android:gravity="center_vertical"
			android:orientation="horizontal">
			<ImageView
				android:id="@+id/HomeIcon"
				android:layout_width="24dp"
				android:layout_height="26dp"
				android:layout_marginLeft="10dp"
				android:src="@drawable/default_image"
				android:scaleType="fitCenter" />
			<TextView
				android:id="@+id/HomeText"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="3dp"
				android:padding="8dp"
				android:text="Home"
				android:textSize="16sp"
				android:textStyle="bold"
				android:fontFamily="@font/product_sans_regular"
				android:textColor="@color/colorAccent" />
		</LinearLayout>
		<LinearLayout
			android:id="@+id/KeysLinear"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="1dp"
			android:paddingLeft="8dp"
			android:paddingTop="6dp"
			android:paddingRight="8dp"
			android:paddingBottom="6dp"
			android:gravity="center_vertical"
			android:orientation="horizontal"
			android:background="@drawable/legacy_drawer_item_ripple">
			<ImageView
				android:id="@+id/KeysIcon"
				android:layout_width="24dp"
				android:layout_height="26dp"
				android:layout_marginLeft="10dp"
				android:src="@drawable/ic_key"
				android:scaleType="fitCenter" />
			<TextView
				android:id="@+id/KeysText"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="3dp"
				android:padding="8dp"
				android:text="Keys"
				android:textSize="16sp"
				android:textStyle="bold"
				android:fontFamily="@font/product_sans_regular"
				android:textColor="@color/colorDrawerText" />
		</LinearLayout>
		<LinearLayout
			android:id="@+id/FaqLinear"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="1dp"
			android:paddingLeft="8dp"
			android:paddingTop="6dp"
			android:paddingRight="8dp"
			android:paddingBottom="6dp"
			android:gravity="center_vertical"
			android:orientation="horizontal"
			android:background="@drawable/legacy_drawer_item_ripple">
			<ImageView
				android:id="@+id/FaqIcon"
				android:layout_width="24dp"
				android:layout_height="26dp"
				android:layout_marginLeft="10dp"
				android:src="@drawable/ic_info_white"
				android:scaleType="fitCenter" />
			<TextView
				android:id="@+id/FaqText"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="3dp"
				android:padding="8dp"
				android:text="FAQ"
				android:textSize="16sp"
				android:textStyle="bold"
				android:fontFamily="@font/product_sans_regular"
				android:textColor="@color/colorDrawerText" />
		</LinearLayout>
		<LinearLayout
			android:id="@+id/AboutLinear"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="1dp"
			android:paddingLeft="8dp"
			android:paddingTop="6dp"
			android:paddingRight="8dp"
			android:paddingBottom="6dp"
			android:gravity="center_vertical"
			android:orientation="horizontal"
			android:background="@drawable/legacy_drawer_item_ripple">
			<ImageView
				android:id="@+id/AboutIcon"
				android:layout_width="24dp"
				android:layout_height="26dp"
				android:layout_marginLeft="10dp"
				android:src="@drawable/ic_info_white"
				android:scaleType="fitCenter" />
			<TextView
				android:id="@+id/AboutText"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="3dp"
				android:padding="8dp"
				android:text="About X-Signer"
				android:textSize="16sp"
				android:textStyle="bold"
				android:fontFamily="@font/product_sans_regular"
				android:textColor="@color/colorDrawerText" />
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
