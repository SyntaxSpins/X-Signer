<androidx.drawerlayout.widget.DrawerLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/_drawer"
	tools:openDrawer="start"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	<androidx.coordinatorlayout.widget.CoordinatorLayout
		android:id="@+id/_coordinator"
		android:layout_height="match_parent"
		android:layout_width="match_parent"
        android:background="?colorSurface"
		android:transitionGroup="true">
		<com.google.android.material.appbar.AppBarLayout
			android:id="@+id/_app_bar"
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
            style="@style/Widget.Material3.AppBarLayout">
			<com.google.android.material.appbar.CollapsingToolbarLayout
				android:id="@+id/collapsingtoolbar"
				android:layout_width="match_parent"
				android:layout_height="150dp"
				android:fitsSystemWindows="true"
				app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
				app:titleCollapseMode="scale"
				style="@style/Style.XSigner.CollapsingToolbar">
				<androidx.appcompat.widget.Toolbar
					android:id="@+id/toolbar"
					android:layout_height="?attr/actionBarSize"
					android:layout_width="match_parent"
					app:layout_collapseMode="pin"/>
			</com.google.android.material.appbar.CollapsingToolbarLayout>
		</com.google.android.material.appbar.AppBarLayout>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical"
			app:layout_behavior="@string/appbar_scrolling_view_behavior">
			<androidx.core.widget.NestedScrollView
				android:id="@+id/vscroll"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_marginTop="35dp">
				<LinearLayout
					android:id="@+id/Container"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:orientation="vertical">
					<LinearLayout
						android:id="@+id/StorageSignLinear"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginLeft="15dp"
						android:layout_marginTop="8dp"
						android:layout_marginRight="15dp"
						android:layout_marginBottom="15dp"
						android:padding="8dp"
                        android:background="@drawable/main_bg_drawable"
						android:orientation="vertical">
						<LinearLayout
							android:id="@+id/SSTopLinear"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:gravity="center_vertical"
							android:orientation="horizontal">
							<LinearLayout
								android:id="@+id/SSIconLinear"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_marginLeft="5dp"
                                android:background="@drawable/ic_container_main"
								android:padding="5dp"
								android:orientation="vertical">
								<ImageView
									android:id="@+id/StorageSignIcon"
									android:layout_width="22dp"
                                    android:tint="?colorOnPrimaryContainer"
									android:layout_height="22dp"
									android:src="@drawable/ic_file_black"
									android:scaleType="fitCenter" />
							</LinearLayout>
							<TextView
								android:id="@+id/SSTopTitle"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
                                android:textColor="?colorOnSurface"
								android:padding="8dp"
								android:text="Sign a file"
								android:textSize="20sp" />
						</LinearLayout>
						<TextView
							android:id="@+id/SSDesc"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:padding="8dp"
                            android:textColor="?colorSecondary"
							android:text="Pick an APK/AAB file from your device's internal storage or from installed apps list to sign it (No support currently for the 'Android/data' and 'Android/obb' folders is available)"
							android:textSize="14sp" />
                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:weightSum="2"
                            android:orientation="horizontal">
						    <com.google.android.material.button.MaterialButton
                                android:id="@+id/SSPickButton"
							    android:layout_width="0dp"
							    android:layout_height="wrap_content"
							    android:layout_marginHorizontal="6dp"
							    android:layout_marginVertical="7dp"
							    android:paddingVertical="8dp"
                                android:layout_weight="1"
							    android:gravity="center_horizontal|center_vertical"
							    android:text="Pick file"
							    android:textSize="16sp"
							    android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
							    style="@style/Widget.Material3.Button"
							    app:textAllCaps="false"
							    android:letterSpacing="0.0" />
                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/ASPickButton"
							    android:layout_width="0dp"
							    android:layout_height="wrap_content"
							    android:layout_marginHorizontal="6dp"
							    android:layout_marginVertical="7dp"
							    android:paddingVertical="8dp"
                                android:layout_weight="1"
							    android:gravity="center_horizontal|center_vertical"
							    android:text="Select an app"
							    android:textSize="16sp"
							    android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
							    style="@style/Widget.Material3.Button.TonalButton"
							    app:textAllCaps="false"
							    android:letterSpacing="0.0" />
                        </LinearLayout>
					</LinearLayout>
					<LinearLayout
						android:id="@+id/RecentsLinear"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginLeft="15dp"
						android:layout_marginTop="8dp"
						android:layout_marginRight="15dp"
						android:layout_marginBottom="15dp"
						android:padding="8dp"
                        android:background="@drawable/main_bg_drawable"
						android:orientation="vertical">
						<LinearLayout
							android:id="@+id/TopRecentsLinear"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:gravity="center_vertical"
							android:orientation="horizontal">
							<LinearLayout
								android:id="@+id/RecentsIconLinear"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_marginLeft="5dp"
                                android:background="@drawable/ic_container_main"
								android:padding="5dp"
								android:orientation="vertical">
								<ImageView
									android:id="@+id/RecentsIcon"
									android:layout_width="22dp"
									android:layout_height="22dp"
                                    android:tint="?colorOnPrimaryContainer"
									android:src="@drawable/ic_restore_black"
									android:scaleType="fitCenter" />
							</LinearLayout>
							<TextView
								android:id="@+id/RecentsTitle"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:padding="8dp"
								android:text="Recently signed files"
                                android:textColor="?colorOnSurface"
								android:textSize="20sp" />
						</LinearLayout>
						<TextView
							android:id="@+id/RecentsText"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:padding="8dp"
                            android:textColor="?colorSecondary"
							android:text="View your recently signed apk/aab files with all details you may need like Signing time, used signing key and signed apk signature digests."
							android:textSize="14sp" />
						<com.google.android.material.button.MaterialButton
							android:id="@+id/ViewRecentsButton"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:layout_marginVertical="7dp"
							android:layout_marginHorizontal="15dp"
							android:paddingVertical="8dp"
							android:gravity="center_horizontal|center_vertical"
							android:text="View"
							android:textSize="16sp"
							android:layout_gravity="right"
							android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
							app:cornerRadius="100dp"
							style="@style/Widget.Material3.Button"
							app:textAllCaps="false"
							android:letterSpacing="0.0" />
					</LinearLayout>
				</LinearLayout>
			</androidx.core.widget.NestedScrollView>
		</LinearLayout>
	</androidx.coordinatorlayout.widget.CoordinatorLayout>
	<LinearLayout
		android:id="@+id/_nav_view"
		android:layout_width="320dp"
		android:layout_height="match_parent"
		android:layout_gravity="start"
		android:background="@drawable/drawable_drawer">
		<include layout="@layout/_drawer_main" />
	</LinearLayout>
</androidx.drawerlayout.widget.DrawerLayout>
