<androidx.drawerlayout.widget.DrawerLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/_drawer"
	tools:openDrawer="start"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	<androidx.coordinatorlayout.widget.CoordinatorLayout
		android:id="@+id/_coordinator"
		android:layout_height="match_parent"
		android:layout_width="match_parent"
        android:background="?colorSurface"
		android:transitionGroup="true">
		<com.google.android.material.appbar.AppBarLayout
			android:id="@+id/_app_bar"
			android:layout_height="wrap_content"
			android:layout_width="match_parent">
			<com.google.android.material.appbar.CollapsingToolbarLayout
				android:id="@+id/collapsingtoolbar"
				android:layout_width="match_parent"
				android:layout_height="200dp"
				android:fitsSystemWindows="true"
				app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
				app:titleCollapseMode="scale"
				style="@style/Style.XSigner.CollapsingToolbar">
				<androidx.appcompat.widget.Toolbar
					android:id="@+id/_toolbar"
					android:layout_height="?attr/actionBarSize"
					android:layout_width="match_parent"
					app:layout_collapseMode="pin"/>
			</com.google.android.material.appbar.CollapsingToolbarLayout>
		</com.google.android.material.appbar.AppBarLayout>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical"
			app:layout_behavior="@string/appbar_scrolling_view_behavior">
			<androidx.core.widget.NestedScrollView
				android:id="@+id/vscroll"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_marginTop="35dp">
				<LinearLayout
					android:id="@+id/Container"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:orientation="vertical">
					<LinearLayout
						android:id="@+id/StorageSignLinear"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginLeft="15dp"
						android:layout_marginTop="8dp"
						android:layout_marginRight="15dp"
						android:layout_marginBottom="15dp"
						android:padding="8dp"
                        android:background="@drawable/main_bg_drawable"
						android:orientation="vertical">
						<LinearLayout
							android:id="@+id/SSTopLinear"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:gravity="center_vertical"
							android:orientation="horizontal">
							<LinearLayout
								android:id="@+id/SSIconLinear"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_marginLeft="5dp"
                                android:background="@drawable/ic_container_main"
								android:padding="5dp"
								android:orientation="vertical">
								<ImageView
									android:id="@+id/StorageSignIcon"
									android:layout_width="22dp"
                                    android:tint="?colorPrimary"
									android:layout_height="22dp"
									android:src="@drawable/ic_file_black"
									android:scaleType="fitCenter" />
							</LinearLayout>
							<TextView
								android:id="@+id/SSTopTitle"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:padding="8dp"
								android:text="Sign from storage"
								android:textSize="20sp"
								android:textColor="#000000" />
						</LinearLayout>
						<TextView
							android:id="@+id/SSDesc"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:padding="8dp"
							android:text="Pick an APK/AAB file from your device's internal storage to sign it (No access to 'Android/data' and 'Android/obb' folders is available)"
							android:textSize="14sp" />
						<com.google.android.material.button.MaterialButton
							android:id="@+id/SSPickButton"
							android:layout_width="wrap_content"
							android:layout_height="47dp"
							android:layout_marginTop="10dp"
							android:layout_marginRight="5dp"
							android:paddingLeft="23dp"
							android:paddingTop="8dp"
							android:paddingRight="23dp"
							android:paddingBottom="8dp"
							android:gravity="center_horizontal|center_vertical"
							android:text="Pick file"
							android:textSize="16sp"
							android:layout_gravity="right"
							android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
							app:cornerRadius="100dp"
							style="@style/Widget.MaterialComponents.Button"
							app:textAllCaps="false"
							android:letterSpacing="0.0" />
					</LinearLayout>
					<LinearLayout
						android:id="@+id/RecentsLinear"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginLeft="15dp"
						android:layout_marginTop="8dp"
						android:layout_marginRight="15dp"
						android:layout_marginBottom="15dp"
						android:padding="8dp"
                        android:background="@drawable/main_bg_drawable"
						android:orientation="vertical">
						<LinearLayout
							android:id="@+id/TopRecentsLinear"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:gravity="center_vertical"
							android:orientation="horizontal">
							<LinearLayout
								android:id="@+id/RecentsIconLinear"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_marginLeft="5dp"
                                android:background="@drawable/ic_container_main"
								android:padding="5dp"
								android:orientation="vertical">
								<ImageView
									android:id="@+id/RecentsIcon"
									android:layout_width="22dp"
									android:layout_height="22dp"
                                    android:tint="?colorPrimary"
									android:src="@drawable/ic_restore_black"
									android:scaleType="fitCenter" />
							</LinearLayout>
							<TextView
								android:id="@+id/RecentsTitle"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:padding="8dp"
								android:text="Recently signed files"
								android:textSize="20sp"
								android:textColor="#000000" />
						</LinearLayout>
						<TextView
							android:id="@+id/RecentsText"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:padding="8dp"
							android:text="View your recently signed apk/aab files with all details you may need like Signing time, used signing key and signed apk signature digests."
							android:textSize="14sp"
							android:textColor="#000000" />
						<com.google.android.material.button.MaterialButton
							android:id="@+id/ViewRecentsButton"
							android:layout_width="wrap_content"
							android:layout_height="47dp"
							android:layout_marginTop="10dp"
							android:layout_marginRight="5dp"
							android:paddingLeft="23dp"
							android:paddingTop="8dp"
							android:paddingRight="23dp"
							android:paddingBottom="8dp"
							android:gravity="center_horizontal|center_vertical"
							android:text="View"
							android:textSize="16sp"
							android:layout_gravity="right"
							android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
							app:cornerRadius="100dp"
							style="@style/Widget.Material3.Button"
							app:textAllCaps="false"
							android:letterSpacing="0.0" />
					</LinearLayout>
				</LinearLayout>
			</androidx.core.widget.NestedScrollView>
		</LinearLayout>
	</androidx.coordinatorlayout.widget.CoordinatorLayout>
	<LinearLayout
		android:id="@+id/_nav_view"
		android:layout_width="320dp"
		android:layout_height="match_parent"
		android:layout_gravity="start"
		android:background="@drawable/drawable_drawer">
		<include layout="@layout/_drawer_main" />
	</LinearLayout>
</androidx.drawerlayout.widget.DrawerLayout>
