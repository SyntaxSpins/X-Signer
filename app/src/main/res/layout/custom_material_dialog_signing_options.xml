<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<LinearLayout
		android:id="@+id/BG"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="15dp"
		android:layout_marginRight="15dp"
		android:paddingTop="12dp"
		android:paddingBottom="8dp"
		android:orientation="vertical"
		android:background="@drawable/drawable_dialog">
		<LinearLayout
			android:id="@+id/linear2"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="18dp"
			android:orientation="horizontal">
			<TextView
				android:id="@+id/title"
				android:focusable="true"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:paddingLeft="8dp"
				android:paddingTop="8dp"
				android:paddingRight="8dp"
				android:paddingBottom="5dp"
				android:text="Signing options"
				android:textSize="25sp"
				android:fontFamily="@font/product_sans_regular"
				android:textColor="@color/md_theme_textMain" />
		</LinearLayout>
		<LinearLayout
			android:id="@+id/linear3"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingTop="10dp"
			android:paddingBottom="25dp"
			android:orientation="vertical">
			<LinearLayout
				android:id="@+id/v1l"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">
				<com.google.android.material.checkbox.MaterialCheckBox
					android:id="@+id/v1"
					android:focusable="true"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginLeft="18dp"
					android:gravity="center_vertical"
					android:text="Use V1 Signature scheme"
					android:textSize="16sp"
					android:fontFamily="@font/product_sans_regular"
					android:textColor="@color/colorTextSecondary" />
			</LinearLayout>
			<LinearLayout
				android:id="@+id/v2l"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">
				<com.google.android.material.checkbox.MaterialCheckBox
					android:id="@+id/v2"
					android:focusable="true"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginLeft="18dp"
					android:gravity="center_vertical"
					android:text="Use V2 Signature scheme"
					android:textSize="16sp"
					android:fontFamily="@font/product_sans_regular"
					android:textColor="@color/colorTextSecondary" />
			</LinearLayout>
			<LinearLayout
				android:id="@+id/v3l"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">
				<com.google.android.material.checkbox.MaterialCheckBox
					android:id="@+id/v3"
					android:focusable="true"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginLeft="18dp"
					android:gravity="center_vertical"
					android:text="Use V3 Signature scheme"
					android:textSize="16sp"
					android:fontFamily="@font/product_sans_regular"
					android:textColor="@color/colorTextSecondary" />
			</LinearLayout>
			<com.google.android.material.materialswitch.MaterialSwitch
				android:id="@+id/za"
				android:focusable="true"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="18dp"
				android:padding="8dp"
				android:text="Use ZipAlign"
				android:textSize="14sp"
				android:fontFamily="@font/product_sans_regular"
				android:textColor="@color/colorTextSecondary" />
		</LinearLayout>
		<LinearLayout
			android:id="@+id/linear4"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="18dp"
			android:layout_marginRight="20dp"
			android:layout_marginBottom="8dp"
			android:paddingLeft="10dp"
			android:paddingTop="10dp"
			android:gravity="right|center_vertical"
			android:orientation="horizontal">
			<LinearLayout
				android:id="@+id/LeftButton"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginRight="3dp"
				android:orientation="vertical"
				android:background="@drawable/legacy_dialog_positive_ripple">
				<TextView
					android:id="@+id/LeftText"
					android:focusable="true"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:paddingLeft="20dp"
					android:paddingTop="13dp"
					android:paddingRight="20dp"
					android:paddingBottom="13dp"
					android:text="Cancel"
					android:textSize="14sp"
					android:textColor="@color/colorAccent"
					android:fontFamily="@font/product_sans_regular" />
			</LinearLayout>
			<LinearLayout
				android:id="@+id/RightButton"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="2dp"
				android:orientation="vertical"
				android:background="@drawable/legacy_dialog_positive_ripple">
				<TextView
					android:id="@+id/RightText"
					android:focusable="true"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:paddingLeft="20dp"
					android:paddingTop="13dp"
					android:paddingRight="20dp"
					android:paddingBottom="13dp"
					android:text="Sign"
					android:textSize="14sp"
					android:textColor="@color/colorAccent"
					android:fontFamily="@font/product_sans_regular" />
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
