<resources>
    <style name="Style.XSigner.CollapsingToolbar" parent="Widget.Material3.CollapsingToolbar">
        <item name="expandedTitleTextAppearance">@style/Style.XSigner.CollapsingToolbar.TitleExpanded</item>
        <item name="collapsedTitleTextAppearance">@style/Style.XSigner.CollapsingToolbar.TitleCollapsed</item>
    </style>
    
    <style name="Style.XSigner.CollapsingToolbar.TitleExpanded">
        <item name="android:textSize">34dp</item>
        <item name="fontFamily">@font/product_sans_regular</item>
        <item name="android:fontFamily">@font/product_sans_regular</item>
        <item name="android:textColor">?colorOnSurface</item>
    </style>
    
    <style name="Style.XSigner.CollapsingToolbar.TitleCollapsed">
        <item name="fontFamily">@font/product_sans_regular</item>
        <item name="android:fontFamily">@font/product_sans_regular</item>
        <item name="android:textColor">?colorOnSurface</item>
    </style>
</resources>